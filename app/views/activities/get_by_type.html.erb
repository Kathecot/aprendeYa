<h1><%= params[:type].capitalize %></h1>
<div class="container activities">
    <% @activities.each do |a| %>
      <div class='activity-card'>
        <%= link_to a do %>
          <h3><%= a.title %></h3>
        <% end %>
        <%= image_tag a.file.preview(resize_to_limit: [100, 100]) %>
      </div>
    <% end %>
</div>
